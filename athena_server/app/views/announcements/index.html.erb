	<div id="enroll">
    <center><a href="#myModal" class="btn btn-lg btn-primary" data-toggle="modal">Enroll</a></center>
	</div>

	<div class="class_tab">
		<div class="class_name">MATH 42</div>
		<div class="color_strip"></div>
	</div>
</div>

<div id="content">
<div class="container-fluid">
	<div class="row">

		<div class="col-md-3"></div>
		<div class="col-md-3">
			<!-- TOPBAR -->
			<div class="btn-group" role="group" aria-label="...">
              <button id="lists" type="button" class="btn btn-default disabled">List</button>
              <button id="calendar" type="button" class="btn btn-default">Calendar</button>
            </div>
		</div>
		<div class="col-md-3">
			<select class="form-control">
            	<option value="one">One</option>
            	<option value="two">Two</option>
